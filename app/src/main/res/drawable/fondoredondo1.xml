<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
    <corners android:radius="100dp" />
    <solid android:color="@color/color_ripler_start" />
</shape>
</item>
<item android:state_focused="true">
<shape android:shape="rectangle">
    <corners android:radius="2dp" />
    <gradient
        android:endColor="#01579b"
        android:startColor="#01579b"/>
</shape>
</item>
<item>
<shape android:shape="rectangle">
    <corners android:radius="140dp" />
    <gradient
        android:endColor="@color/color_ripler_end"
        android:startColor="@color/color_ripler_start"
        android:centerColor="@color/color_ripler_center"/>

</shape>
</item>

</selector>