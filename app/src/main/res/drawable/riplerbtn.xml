<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />

            <solid android:color="@color/color_ripler_start" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <gradient android:endColor="@color/color_ripler_center" android:startColor="@color/color_ripler_start" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="90dp" />
            <gradient android:centerColor="@color/color_ripler_start" android:endColor="@color/color_ripler_start" android:startColor="@color/color_ripler_start" />

        </shape>
    </item>

</selector>